---
import BaseLayout from "../layouts/BaseLayout.astro";

const base = import.meta.env.BASE_URL;

/**
 * TEMP STATIC DATA
 * Replace later with generated data if needed
 */
const events = [
  {
    slug: "raf-2026-01-25",
    name: "Raleigh Amateur Fights",
    date: "January 25, 2026",
    location: "Raleigh, NC",
  },
];
---

<BaseLayout title="RAF AI Intelligence v1">
  <section class="card">
    <h2>Upcoming Events</h2>

    <div style="display:grid;gap:16px;">
      {events.map((event) => (
        <a
          class="card"
          style="text-decoration:none;color:inherit;"
          href={`${base}events/${event.slug}/`}
        >
          <div style="font-weight:700;">{event.name}</div>
          <div class="small">{event.date}</div>
          <div class="small">{event.location}</div>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
