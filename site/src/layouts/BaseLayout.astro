---
const { title = "RAF AI Intelligence v1" } = Astro.props;

// BASE_URL is "/" locally and "/raf-ai-v1/" on GitHub Pages
const BASE = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <!-- Base-aware stylesheet (important for GitHub Pages project sites) -->
    <link rel="stylesheet" href={`${BASE}styles/global.css`} />
  </head>
  <body>
    <div class="container">
      <header class="card">
        <div style="display:flex;justify-content:space-between;align-items:center;gap:12px;">
          <div>
            <div style="font-size:18px;font-weight:700;">RAF AI Intelligence v1</div>
            <div class="small">Probabilities & edges are informational only; no guarantees.</div>
          </div>
          <nav style="display:flex;gap:12px;">
            <!-- Base-aware Home link -->
            <a href={BASE}>Home</a>
          </nav>
        </div>
      </header>

      <main>
        <slot />
      </main>

      <footer class="small" style="margin-top:28px; padding-bottom:28px;">
        <hr />
        <div>
          Disclaimer: This site provides analytical estimates for entertainment and informational purposes.
          If you choose to wager, do so responsibly.
        </div>
      </footer>
    </div>
  </body>
</html>
