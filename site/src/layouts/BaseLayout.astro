---
const { title = "Signal Forge Sports" } = Astro.props;
const base = import.meta.env.BASE_URL;

const cssVersion = import.meta.env.DEV ? Date.now() : "1";

const brandName = "Signal Forge Sports";
const tagline = "AI-driven signals for RAF and emerging sports markets.";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={tagline} />

    <!-- Open Graph -->
    <meta property="og:site_name" content={brandName} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={tagline} />
    <meta property="og:type" content="website" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={tagline} />

    <link rel="stylesheet" href={`${base}styles/global.css?v=${cssVersion}`} />
  </head>

  <body>
    <!-- Full-width top bar -->
    <header class="topbar" role="banner">
      <div class="topbar__inner">
        <div class="topbar__brand">
          <div class="topbar__name">{brandName}</div>
          <div class="topbar__tagline">{tagline}</div>
        </div>

        <nav class="topbar__nav" aria-label="Primary navigation">
          <a class="topbar__link" href={base}>Home</a>
          <a class="topbar__link" href={`${base}about/`}>About</a>
          <a class="topbar__link" href={`${base}pricing/`}>Pricing</a>
          <a class="topbar__link" href={`${base}disclaimer/`}>Disclaimer</a>
        </nav>
      </div>
    </header>

    <div class="container">
      <main>
        <slot />
      </main>

      <footer class="site-footer" aria-label="Site disclaimer and disclosures">
        <hr class="site-footer__rule" />

        <div class="site-footer__inner">
          <p class="site-footer__disclaimer">
            Signal Forge Sports provides analytical insights and informational signals only.
            Content is not betting advice, investment advice, or a guarantee of outcomes.
            Decisions remain solely the responsibility of the user.
          </p>

          <p class="site-footer__affiliate">
            Signal Forge Sports may receive compensation from affiliated partners.
            This does not influence signal generation, ranking, or displayed values.
          </p>

          <p class="site-footer__cta">
            View supported sportsbooks:
            <a href="#" rel="nofollow noopener" target="_blank">FanDuel</a>,
            <a href="#" rel="nofollow noopener" target="_blank">DraftKings</a>
          </p>
        </div>
      </footer>
    </div>
  </body>
</html>
